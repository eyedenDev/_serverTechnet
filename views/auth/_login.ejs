<% include ../partials/templates/dasbboard/pg_head_logs.ejs %>

<div class="row justify-content-center w-100"> <!-- Vertically Align Modal -->

<div class="container align-self-center">
  <% if (message != '') { %>
      <p class="text-center text-"<%= message_type ? message_type : 'danger'; %><%= message %></p>
  <% } %>
      <div class="card card-login mx-auto mt-5">
        <div class="card-header justify-content-center w-100">
          <div class="modal-dialog align-self-center">
            <img class=" img-fluid" src="/assets/img/logos/corp/tmIcon.svg" alt=""  />
            </div>
        </div>
        <div class="card-body">
          <form lass="form-signin" action="/" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <div class="form-label-group">
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required="required" autofocus="autofocus">
                <label for="inputEmail">Email address</label>
              </div>
            </div>
            <div class="form-group">
              <div class="form-label-group">
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="required">
                <label for="inputPassword">Password</label>
              </div>
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-warning btn-block mb-1">Login</button>
          </form>
          <!-- <div class="text-center mt-2">
            <a class="d-block small" href="/forgottenPassword">Forgot Password?</a>
          </div> -->
        </div>
      </div>
    </div>
    </div>



  <% include ../partials/templates/dasbboard/pg_close_log.ejs %>
