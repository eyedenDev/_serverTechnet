<% include ../partials/templates/dasbboard/pg_head_logs.ejs %>

<div class="container align-self-center">
  <% if (message != '') { %>
      <p class="text-center text-"<%= message_type ? message_type : 'danger'; %><%= message %></p>
  <% } %>

  <div class="container">
        <div class="card card-login mx-auto mt-5">
          <!-- <div class="card-header">Reset Password</div> -->
          <div class="card-body">
            <div class="text-center mb-4">
              <img class="mb-3 img-fluid" src="/assets/img/logos/corp/tmIcon.svg" alt="" width="220"  />
              <div class="clearfix"></div>
              <h4>Forgot your password?</h4>
              <p>Enter your email address and we will send you instructions on how to reset your password.</p>
            </div>
            <form>
              <div class="form-group">
                <div class="form-label-group">
                  <input type="email" id="inputEmail" class="form-control" placeholder="Enter email address" required="required" autofocus="autofocus">
                  <label for="inputEmail">Enter email address</label>
                </div>
              </div>
              <a class="btn btn-primary btn-block" href="/forgotten">Reset Password</a>
            </form>
            <div class="text-center mt-2">
              <a class="d-block small" href="/">Cancel</a>
            </div>
          </div>
        </div>
      </div>


  <% include ../partials/templates/dasbboard/pg_close_log.ejs %>
