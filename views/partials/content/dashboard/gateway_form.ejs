<div class="col-lg-12 mx-auto w-80 p-3 text-center">
  <div class="card">
    <div class="card-header d-flex align-items-center text-center">
      <h4 class=" mt-1">ADD NEW <%- add_or_edit %></h4>
    </div>
    <div class="card-body">
      <% if (message != '') { %>
          <div class="<%= message_type ? `alert alert-${message_type}` : 'alert alert-light'; %>"><%= message %></div>
      <% } %>
      <form class="form-horizontal mt-2 add-canary-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-group row">
          <div class="col-sm-10 offset-sm-1">
            <input type="text" maxlength="7" class="form-control" name="gateway" id="gateway" value="<%= gateway_addEdit.gateway %>" placeholder="Gateway ID" required>
          </div>
        </div>
        <div class="line"></div>
        <div class="form-group row">

          <div class="col-sm-10 offset-sm-1">
            <input type="text" class="form-control" name="assignedTo" id="assignedTo" value="<%= gateway_addEdit.assignedTo %>" min="1" placeholder="Assigned to...">
          </div>
        </div>
        <div class="line"></div>
        <div class="form-group row">
        </div>
        <div class="line"></div>
        <div class="form-group row">
          <div class="col-sm-10 offset-sm-1 float-right">
          <!-- <div class="col-sm-4 offset-sm-8 float-right"> -->
            <a href="/api/gateways" id="cancel" name="cancel" class="btn btn-danger btn-sm mb-2"> Cancel</a>
            <button type="submit" class="btn btn-primary btn-sm mb-2 mr-2" name="processGate" value="<%= submit_value %>"><%- submit_label %></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
