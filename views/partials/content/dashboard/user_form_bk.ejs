<div class="col-lg-12 mx-auto w-80 p-3 text-center">
  <div class="card">
    <div class="card-header d-flex align-items-center text-center">
      <h4 class=" mt-1">ADD NEW <%= add_or_edit %></h4>
    </div>
    <div class="card-body">
      <% if (message != '') { %>
          <div class="<%= message_type ? `alert alert-${message_type}` : 'alert alert-light'; %>"><%= message %></div>
      <% } %>
      <%
      var techOpt = editUser.account_type == ' technician' ?'selected' : '',
        designOpt = editUser.account_type == ' design' ?'selected' : '',
        adminOpt = editUser.account_type == ' admin' ?'selected' : '',
        rndOpt = editUser.account_type == ' r&d' ?'selected' : '';
      %>
      <form class="mt-4" action="/api/user"  method="post" enctype="multipart/form-data" autocomplete="off">
        <input type="hidden" name="id" value="<%= editUser ? editUser.id : ''; %>">
        <div class="form-group">
          <!-- <label>First name</label> -->
          <input type="text" class="form-control" name="first_name" id="first-name" value="<%= editUser ? editUser.first_name : ''; %>">

        </div>
        <div class="form-group">
          <!-- <label>Last name</label> -->
          <input type="text" class="form-control" name="last_name" id="last-name" value="<%= editUser ? editUser.last_name : ''; %>">
        </div>
        <div class="form-group">
          <!-- <label>Email</label> -->
          <input type="text" class="form-control" name="username" id="username" value="<%= editUser ? editUser.username : ''; %>">

        </div>
        <div class="input-group mb-3 mr-sm-2">
          <div class="input-group-prepend">
            <div class="input-group-text">Type</div>
          </div>
          <select class="form-control" id="inlineFormInputGroupUsername2"name="account_type">
              <option value="technician" <%= techOpt %>>Technician</option>
              <option value="designer" <%= techOpt %>>Designer</option>
              <option value="admin" <%= techOpt %>>Admin</option>
              <option value="r&d" <%= techOpt %>>R&D</option>
          </select>
          <!-- <input type="text" class="form-control" id="inlineFormInputGroupUsername2" placeholder="Username"> -->
        </div>


        <a href="/api/profile" id="cancel" name="cancel" class="btn btn-sm btn-danger float-right mr-2">Cancel</a>
        <button type="submit" class="btn btn-primary btn-sm mb-2 mr-2" name="processUser" value="<%= submit_value %>"><%- submit_label %></button>

      </form>
    </div>
  </div>
</div>
</div>
