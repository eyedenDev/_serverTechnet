<% include ../partials/templates/page.header.ejs %>
<div class="container">
<% include ../partials/templates/pg_navigation.ejs %>

<div class="container mt-5">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (cub) { %>
      <div class="container">

        <form class="add-cub-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="cub-id">C&Uuml;B ID</label>
                    <input type="text" class="form-control" name="node_id" id="cub-id" value="<%= cub.node_id %>" required>
                </div>
                <div class="form-group col-md-4">
                  <label for="unit-number">Unit Number</label>
                  <input type="number" class="form-control" name="unit_number" id="unit-number" placeholder="Unit Number" value="<%= cub.unit_number %>" min="1" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="unit-name">Unit Name</label>
                    <input type="text" class="form-control" name="unit_name" id="unit-name" value="<%= cub.unit_name %>" required>
                </div>
            </div>
            <div  class="text-center">
              <button type="submit" class="btn btn-danger btn-sm mb-2 mr-3" name="processCUB" value="cancel">CANCEL</button>
              <button type="submit" class="btn btn-success btn-sm mb-2 mr-2" name="processCUB" value="update"><i class="fa fa-upload fa-1x"></i> EDIT</button>

            </div>
        </form>
        </div>
    <% } else { %>
        <p class="text-center">C&Uuml;B Not Found. Go <a href="api/cub/add">here</a> to add C&Uuml;B.</p>
    <% } %>
</div>
</div>
